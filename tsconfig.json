{
	"include": [
		"src/**/*",
		"./jest.setup.ts"
	],
	"compilerOptions": {
        "experimentalDecorators": true,
		"outDir": "dist",
		"rootDir": "src",
		"baseUrl": "./",
		"sourceMap": true,
		"declaration": true,
		"strict": true,
		"declarationMap": true,
		"module": "esnext",
		"target": "es2015",
		"jsx": "preserve",
		"allowJs": false,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"removeComments": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"diagnostics": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"lib": [
			"dom",
			"es2015",
			"es5",
			"es6"
		]
	},
	"exclude": [
		"node_modules/**",
		"test/**",
		"dist/**",
		"*.js",
		"*.ts",
		"src/example/**"
	]
}
