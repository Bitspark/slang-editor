{
	"include": [
		"src/**/*",
		"test/**/*",
		"./jest.setup.ts"
	],
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"sourceMap": true,
		"declaration": true,
		"strict": true,
		"declarationMap": true,
		"module": "esnext",
		"target": "es2015",
		"jsx": "preserve",
		"allowJs": false,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"removeComments": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"diagnostics": true,
		"skipLibCheck": true,
        "resolveJsonModule": true
		"lib": [
			"dom",
			"es2015",
			"es5",
			"es6"
		]
	}
}
