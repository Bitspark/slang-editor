{
	"compilerOptions": {
		"outDir": "./build/",
		"strict": true,
		"module": "commonjs",
		"target": "es6",
		"jsx": "preserve",
		"allowJs": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"removeComments": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"diagnostics": true,
		"resolveJsonModule": true
	}
}
