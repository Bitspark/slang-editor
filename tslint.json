{
	"extends": "tslint:recommended",
	"rules": {
		"linebreak-style": false,
		"no-parameter-reassignment": false,
		"max-classes-per-file": false,
		"indent": [true, "tabs", 2],
		"no-console": [true, "log", "warn"],
		"no-empty": [true, "allow-empty-functions"],
		"no-unused-expression": [true, "allow-new"]
	},
	"linterOptions": {
		"exclude": [
			"src/slang/ui/link/*"
		]
	}
}