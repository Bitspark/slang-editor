{
	"extends": [],
	"rulesDirectory": [
		"tslint-consistent-codestyle"
	],
	"rules": {
		/*"linebreak-style": false,
		"no-parameter-reassignment": false,
		"max-classes-per-file": false,*/
		"indent": [
			true,
			"tabs",
			2
		],
		"no-console": [
			true,
			"log",
			"warn"
		],
		/*"no-empty": [
			true,
			"allow-empty-functions"
		],*/
		"no-unused-expression": [
			true,
			"allow-new"
		],
		/*"no-namespace": false,
		"variable-name": false,
		"no-else-after-return": false,*/
		"number-literal-format": true,
		"no-unnecessary-qualifier": true,
		"curly": true,
		"typedef-whitespace": [
			true,
			{
				"call-signature": "nospace",
				"index-signature": "nospace",
				"parameter": "nospace",
				"property-declaration": "nospace",
				"variable-declaration": "nospace"
			},
			{
				"call-signature": "onespace",
				"index-signature": "onespace",
				"parameter": "onespace",
				"property-declaration": "onespace",
				"variable-declaration": "onespace"
			}
		],
		"no-consecutive-blank-lines": [
			true,
			1
		],
		"one-line": [
			true,
			"check-catch",
			"check-finally",
			"check-else",
			"check-open-brace",
			"check-whitespace"
		],
		"no-unnecessary-else": true,
		"naming-convention": [
			true,
			{
				"type": "default",
				"format": "camelCase",
				"leadingUnderscore": "forbid",
				"trailingUnderscore": "forbid"
			},
			{
				"type": "parameter",
				"modifiers": "unused",
				"leadingUnderscore": "require"
			},
			{
				"type": "type",
				"format": "PascalCase"
			},
			{
				"type": "enumMember",
				"format": "PascalCase"
			},
			{
				"type": "genericTypeParameter"
			},
			{
				"type": "property",
				"modifiers": [
					"public",
					"static",
					"const"
				],
				"format": "UPPER_CASE"
			},
			{
				"type": "functionVariable",
				"modifiers": [
					"export",
					"const"
				],
				"format": "camelCase"
			},
			{
				"type": "variable",
				"modifiers": [
					"export",
					"const"
				],
				"format": "UPPER_CASE"
			},
			{
				"type": "variable",
				"modifiers": [
					"global",
					"const"
				],
				"format": [
					"camelCase",
					"UPPER_CASE"
				]
			}
		]
	},
	"linterOptions": {
		"exclude": [
			"src/slang/ui/link/*"
		]
	}
}